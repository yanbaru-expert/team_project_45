<h2 class="text-center">Ruby/Rails教材</h2>
<div class="text-container">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="card-box col-12 col-md-6 col-lg-4">
        <%= link_to "/movies/#{movie.id}" do %>
          <div class="card border-dark mb-3">
            <div class="bd-placeholder-img card-img-top">
              <img class="text-card-img" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg" alt="デフォルト画像">
            </div>
            <object class="btn btn-primary btn-block">視聴済みボタン</object>
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-genre">【<%= movie.genre_i18n %>】</p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
