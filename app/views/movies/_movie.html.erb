<div class="card-box col-12 col-md-6 col-lg-4">
  <div class="card border-dark mb-3">
    <div class="YoutubeWrapper">
      <div class="embed-responsive embed-responsive-16by9">
        <%= embed_youtube(movie.url) %>
      </div>
    </div>
    <div class="card-body">
      <p id="movie-<%= movie.id %>" >
        <% if movie.watch_progresses_by?(current_user) %>
          <%= render "watch", movie: movie %>
        <% else %>
          <%= render "diswatch", movie: movie %>
        <% end %>
      </p>
    </div>
    <h5 class="card-title">Lv.<%= movie_counter + 1 %> : <%= movie.title %></h5>
  </div>
</div>
